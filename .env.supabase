# HalalCheck AI - Supabase Configuration
# Copy these values from your Supabase project settings

# Project Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@db.your-project-id.supabase.co:5432/postgres

# Storage Configuration
SUPABASE_STORAGE_BUCKET=halalcheck-files
NEXT_PUBLIC_SUPABASE_STORAGE_URL=https://your-project-id.supabase.co/storage/v1/object/public/halalcheck-files

# Authentication Configuration
SUPABASE_JWT_SECRET=your-jwt-secret-here
NEXT_PUBLIC_SUPABASE_AUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Production URLs (update for production)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Email Configuration (for Supabase Auth)
SUPABASE_SMTP_HOST=smtp.resend.com
SUPABASE_SMTP_PORT=587
SUPABASE_SMTP_USER=resend
SUPABASE_SMTP_PASS=your-resend-api-key
SUPABASE_SMTP_SENDER_NAME=HalalCheck AI
SUPABASE_SMTP_SENDER_EMAIL=noreply@halalcheck.eu

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.txt,.csv,.xls,.xlsx,.doc,.docx,.pdf,.jpg,.jpeg,.png,.webp,.rtf,.odt,.ods,.odp

# Analysis Limits
TRIAL_ANALYSIS_LIMIT=50
TRIAL_DURATION_DAYS=14