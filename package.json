{
  "name": "halalcheck-eu",
  "version": "1.0.0",
  "description": "AI-Powered Halal Certification Platform for Europe",
  "main": "src/server.ts",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:legacy": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "prod": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "./scripts/test-full-stack.sh",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "playwright test",
    "test:integration": "cd backend && npm run test:integration",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "setup": "cp .env.development .env && echo 'Please edit .env with your API keys'",
    "setup:legacy": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "validate:ingredients": "cd backend && npm run validate:ingredients",
    "backup": "./scripts/backup.sh",
    "deploy": "./scripts/deploy.sh",
    "logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "ps": "docker-compose -f docker-compose.dev.yml ps",
    "clean": "docker system prune -f && docker volume prune -f"
  },
  "keywords": [
    "halal",
    "certification",
    "ai",
    "food-safety",
    "islamic",
    "compliance",
    "europe",
    "ingredients"
  ],
  "author": "HalalCheck EU Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "private"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "docx": "^9.5.1",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jspdf": "^3.0.1",
    "multer": "^2.0.2",
    "openai": "^5.10.1",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5"
  }
}
